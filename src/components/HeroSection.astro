<section id="hero" class="hero section">
  <div class="container">
    <div class="row align-items-center">
      
      <!-- Text Content -->
      <div class="col-lg-7 content-col" data-aos="fade-up">
        <div class="content">
          
          <div class="main-heading">
            <h1>
              Empowering Neurodiversity in Space
            </h1>
          </div>

          <div class="divider my-3"></div>

          <div class="description mb-4">
            <p>
              Space for Neurodiversity advances inclusion, awareness, and meaningful participation of neurodivergent individuals in the space sector. We combine research, advocacy, and community engagement to create more inclusive workplaces, policies, and opportunities across the industry.
            </p>
          </div>

          <div class="cta-button">
            <a href="/about" class="btn btn-primary">
              <span>LEARN MORE</span>
              <i class="bi bi-arrow-right ms-2"></i>
            </a>
          </div>

        </div>
      </div>

      <!-- Visual / Logo -->
      <div class="col-lg-5 text-center" data-aos="zoom-out">
        <div class="visual-content">
          <div class="shape">
            <img 
              src="img/spaceforneuro.png" 
              alt="Space for Neurodiversity logo" 
              class="img-fluid"
            >
          </div>
        </div>
      </div>

    </div>
  </div>
</section>